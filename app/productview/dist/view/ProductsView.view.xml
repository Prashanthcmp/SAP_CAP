<mvc:View
    controllerName="productview.controller.ProductsView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <Panel
                id="idPanel1"
                expandAnimation="true"
                backgroundDesign="Transparent"
                accessibleRole="Region"
            >
                <l:VerticalLayout
                    id="containerLayout"
                    width="100%"
                >
                    <l:BlockLayout
                        id="BlockLayout"
                        background="Accent"
                        content="{/ProductCategory}"
                    >
                        <l:BlockLayoutRow rowColorSet="ColorSet4">

                            <l:BlockLayoutCell
                                backgroundColorSet="ColorSet1"
                                backgroundColorShade="ShadeB"
                                title=""
                            >
                                <l:Grid
                                    position="Left"
                                    defaultSpan="L6 M12 S12"
                                    defaultIndent="XL0 L0 M0 S0"
                                >
                                    <l:VerticalLayout>
                                        <Title
                                            level="Auto"
                                            titleStyle="H2"
                                        >
                                            <Link
                                                text="{name}"
                                                press="onLinkPress"
                                                target="_blank"
                                            />
                                        </Title>
                                        <Text
                                            text="{Description}"
                                        />
                                    </l:VerticalLayout>
                                </l:Grid>
                            </l:BlockLayoutCell>
                        </l:BlockLayoutRow>
                    </l:BlockLayout>
                </l:VerticalLayout>
            </Panel>
        </content>
    </Page>
</mvc:View>
